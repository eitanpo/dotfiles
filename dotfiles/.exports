#!/usr/bin/env bash

# Make vim the default editor.
export EDITOR='vim';

# Make Python use UTF-8 encoding for output to stdin, stdout, and stderr.
export PYTHONIOENCODING='UTF-8';

# Bash history configuration
# HISTSIZE: commands kept in memory per session (default: 500)
# HISTFILESIZE: commands kept in ~/.bash_history (-1 = unlimited)
export HISTSIZE='100000';
export HISTFILESIZE='-1';
# HISTCONTROL options:
# - ignoreboth: shorthand for ignorespace + ignoredups
#   - ignorespace: ignore commands starting with space (useful for secrets)
#   - ignoredups: ignore consecutive duplicate commands
# - erasedups: remove all previous occurrences when saving a new command
export HISTCONTROL='ignoreboth:erasedups';

# Single sessions history
export SHELL_SESSION_HISTORY=0

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# Highlight section titles in manual pages (bold yellow).
export LESS_TERMCAP_md=$'\e[1;33m';

# Don’t clear the screen after quitting a manual page.
export MANPAGER='less -X';

# Hide the “default interactive shell is now zsh” warning on macOS.
export BASH_SILENCE_DEPRECATION_WARNING=1;

# Change default starship configuration
export STARSHIP_CONFIG=~/.starship

# dotnet
export DOTNET_CLI_TELEMETRY_OPTOUT=1
export DOTNET_ROOT="/opt/homebrew/opt/dotnet/libexec"

# podman
if [ -f "$HOME/Projects/podman/.vagrant/machines/default/virtualbox/private_key" ]; then
    export CONTAINER_SSHKEY="$HOME/Projects/podman/.vagrant/machines/default/virtualbox/private_key"
fi